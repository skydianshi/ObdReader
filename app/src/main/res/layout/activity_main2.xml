<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.testfunctions.obdreader.Main2Activity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_gravity="center"
            android:background="@mipmap/camposs_bg">
            <com.example.testfunctions.RoundProgressBar
                android:id="@+id/speed_roundProgressBar1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"

                />
            <com.example.testfunctions.CompassView
                android:id="@+id/speed_compass_pointer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@mipmap/camposs_ori" />
            <TextView
                android:id="@+id/speedshow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:text="0km/h"
                android:textColor="#00ffff"
                />
        </FrameLayout>
        
        <TextView android:layout_height="match_parent"
            android:layout_width="10dp" />

        <FrameLayout
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_gravity="right"
            android:background="@mipmap/camposs_bg">
            <com.example.testfunctions.RoundProgressBar
                android:id="@+id/RPM_roundProgressBar1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"

                />
            <com.example.testfunctions.CompassView
                android:id="@+id/RPM_compass_pointer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@mipmap/camposs_ori" />
            <TextView
                android:id="@+id/RPMshow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:text="0rpm"
                android:textColor="#00ffff"
                />
        </FrameLayout>

    </LinearLayout>
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="汽车速度"
        android:textColor="#00ffff"
        android:layout_marginStart="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发动机转速"
        android:textColor="#00ffff"
        android:layout_marginEnd="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_gravity="center"
            android:background="@mipmap/camposs_bg">
            <com.example.testfunctions.RoundProgressBar
                android:id="@+id/speed_roundProgressBar2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"

                />
            <com.example.testfunctions.CompassView
                android:id="@+id/speed_compass_pointer2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@mipmap/camposs_ori" />
            <TextView
                android:id="@+id/speedshow2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:text="0km/h"
                android:textColor="#00ffff"
                />
        </FrameLayout>

        <TextView android:layout_height="match_parent"
            android:layout_width="10dp" />

        <FrameLayout
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_gravity="right"
            android:background="@mipmap/camposs_bg">
            <com.example.testfunctions.RoundProgressBar
                android:id="@+id/RPM_roundProgressBar3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"

                />
            <com.example.testfunctions.CompassView
                android:id="@+id/RPM_compass_pointer3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@mipmap/camposs_ori" />
            <TextView
                android:id="@+id/RPMshow3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:text="0rpm"
                android:textColor="#00ffff"
                />
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发动机冷却液温度"
            android:textColor="#00ffff"
            android:layout_marginStart="27dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进气歧管压力"
            android:textColor="#00ffff"
            android:layout_marginEnd="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:text="质量空气流量：0 g/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/airFlowTextView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MAPTextView"
        android:text="进气歧管压力：0"
        />

    <TextView
        android:text="发动机冷却液温度：0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ECTTextView"
        />

    <TextView
        android:text="发动机转速：0 RPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RPM"
        />

    <TextView
        android:text="速度： 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speedTextView"
        />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="连接汽车"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connectButton"
            android:layout_weight="1"
            />

        <Button
            android:text="开始获取数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>


</RelativeLayout>
